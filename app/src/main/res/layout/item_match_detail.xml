<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="20dp"
    android:padding="5dp"
    android:background="@drawable/light_grey_background"
    >


    <androidx.cardview.widget.CardView
        android:id="@+id/cvChamp"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="5dp"
        android:layout_marginTop="7dp"
        app:cardCornerRadius="55dp"
        app:cardElevation="0dp">

        <ImageView
            android:id="@+id/ivChampionBox"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:scaleType="centerCrop"
            tools:ignore="RtlSymmetry"
            tools:srcCompat="@tools:sample/avatars" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cvSpell1"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="50dp"
        android:layout_marginTop="0dp"
        app:cardCornerRadius="55dp"
        app:cardElevation="0dp">

        <ImageView
            android:id="@+id/ivSpell1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            tools:srcCompat="@tools:sample/avatars"
            android:scaleType="centerCrop"
            tools:ignore="RtlSymmetry" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cvSpell2"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="50dp"
        android:layout_marginTop="30dp"
        app:cardCornerRadius="55dp"
        app:cardElevation="0dp">

        <ImageView
            android:id="@+id/ivSpell2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            tools:srcCompat="@tools:sample/avatars"
            android:scaleType="centerCrop"
            tools:ignore="RtlSymmetry" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tvLevel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="17dp"
        android:layout_toEndOf="@+id/cvChamp"
        android:text="18"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tvSummoner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="55dp"
        android:layout_marginTop="5dp"
        android:layout_toEndOf="@+id/cvChamp"
        android:text="Summoner Name"
        android:textSize="12sp" />


    <TextView
        android:id="@+id/tvSummonerRank"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="55dp"
        android:layout_marginTop="20dp"
        android:layout_toEndOf="@+id/cvChamp"
        android:text="Gold IV"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tvKDA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:layout_toEndOf="@+id/tvSummonerRank"
        android:text="11/3/20"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tvCS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="35dp"
        android:layout_toEndOf="@+id/tvSummonerRank"
        android:text="300 CS"
        android:textSize="12sp" />

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/cvChamp"
        android:layout_marginStart="165dp"
        android:layout_marginTop="15dp"
        android:background="@color/white">

        <TableRow>
            <ImageView
                android:id="@+id/ivItem1"
                android:layout_width="20dp"
                android:layout_height="20dp"
                tools:srcCompat="@tools:sample/avatars"
                android:scaleType="centerCrop"
                tools:ignore="RtlSymmetry" />
            <ImageView
                android:id="@+id/ivItem2"
                android:layout_width="20dp"
                android:layout_height="20dp"
                tools:srcCompat="@tools:sample/avatars"
                android:scaleType="centerCrop"
                tools:ignore="RtlSymmetry" />
            <ImageView
                android:id="@+id/ivItem3"
                android:layout_width="20dp"
                android:layout_height="20dp"
                tools:srcCompat="@tools:sample/avatars"
                android:scaleType="centerCrop"
                tools:ignore="RtlSymmetry" />

            <ImageView
                android:id="@+id/ivItem4"
                android:layout_width="20dp"
                android:layout_height="20dp"
                tools:srcCompat="@tools:sample/avatars"
                android:scaleType="centerCrop"
                tools:ignore="RtlSymmetry" />
            <ImageView
                android:id="@+id/ivItem5"
                android:layout_width="20dp"
                android:layout_height="20dp"
                tools:srcCompat="@tools:sample/avatars"
                android:scaleType="centerCrop"
                tools:ignore="RtlSymmetry" />
            <ImageView
                android:id="@+id/ivItem6"
                android:layout_width="20dp"
                android:layout_height="20dp"
                tools:srcCompat="@tools:sample/avatars"
                android:scaleType="centerCrop"
                tools:ignore="RtlSymmetry" />
            <ImageView
                android:id="@+id/ivItem7"
                android:layout_width="20dp"
                android:layout_height="20dp"
                tools:srcCompat="@tools:sample/avatars"
                android:scaleType="centerCrop"
                tools:ignore="RtlSymmetry" />
        </TableRow>


    </TableLayout>

