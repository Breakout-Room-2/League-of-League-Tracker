    <TextView
        android:id="@+id/tvChampName"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cvChamp"
        android:layout_marginStart="-50dp"
        android:layout_marginTop="1dp"
        android:layout_toEndOf="@+id/cvChamp"
        android:gravity="center"
        tools:text="Jhin" />

    <TextView
        android:id="@+id/tvMatchResult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="0dp"
        android:layout_toEndOf="@+id/cvChamp"
        tools:text="VICTORY" />

    <TextView
        android:id="@+id/tvMode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvMatchResult"
        android:layout_marginStart="10dp"
        android:layout_marginTop="0dp"
        android:layout_toEndOf="@+id/cvChamp"
        tools:text="Summoner's Rift" />

    <TextView
        android:id="@+id/tvDuration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvMode"
        android:layout_marginStart="10dp"
        android:layout_marginTop="0dp"
        android:layout_toEndOf="@+id/cvChamp"
        tools:text="40:00" />

    <TextView
        android:id="@+id/tvKDA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="130dp"
        android:layout_marginTop="0dp"
        android:layout_toEndOf="@+id/cvChamp"
        tools:text="K/D/A" />

    <TextView
        android:id="@+id/tvLevel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvKDA"
        android:layout_marginStart="130dp"
        android:layout_marginTop="0dp"
        android:layout_toEndOf="@+id/cvChamp"
        tools:text="Level 18" />

    <TextView
        android:id="@+id/tvCS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvLevel"
        android:layout_marginStart="130dp"
        android:layout_marginTop="0dp"
        android:layout_toEndOf="@+id/cvChamp"
        tools:text="300 CS" />



